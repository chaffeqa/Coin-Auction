<h1>Items Admin</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Series</th>
    <th>Diameter</th>
    <th>Designer</th>
    <th>Weight</th>
    <th>Edge</th>
    <th>Metal content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.age %></td>
    <td><%= item.series %></td>
    <td><%= item.diameter %></td>
    <td><%= item.designer %></td>
    <td><%= item.weight %></td>
    <td><%= item.edge %></td>
    <td><%= item.metal_content %></td>
    <td><%= link_to 'Show', admin_item_path(item) %></td>
    <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
    <td><%= link_to 'Destroy', admin_item_path(item), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

